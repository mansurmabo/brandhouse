<section id="advertisement">
  <div class="container">
    <img src="<%= image_path '/uploads/shop/advertisement.jpg' %>" alt=""/>
  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <%= render 'shared/sideBar' %>
      </div>

      <div class="col-sm-9 padding-right">
        <div class="features_items"><!--features_items-->
          <h2 class="title text-center">Features Items</h2>

          <div class="col-sm-4">
            <div class="product-image-wrapper">
              <div class="single-products">
                <div class="productinfo text-center">
                  <img src="<%= image_path '/uploads/shop/product8.jpg' %>" alt=""/>

                  <h2>$56</h2>

                  <p>Easy Polo Black Edition</p>
                  <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                </div>


                <div class="product-overlay">
                  <div class="overlay-content">
                    <h2>$56</h2>

                    <p>Easy Polo Black Edition</p>
                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                  </div>
                </div>
              </div>
              <div class="choose">
                <ul class="nav nav-pills nav-justified">
                  <li><a href=""><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                  <li><a href=""><i class="fa fa-plus-square"></i>Add to compare</a></li>
                </ul>
              </div>
            </div>
          </div>
          <!--------------------------------------------------------------->
          <div class="col-sm-4">
            <div class="product-image-wrapper">
              <div class="single-products">
                <div class="productinfo text-center">
                  <% @products.each do |product| %>
                      <h2><%= product.price %></h2>
                      <p><%= product.title %></p>
                      <%= link_to add_to_cart_carts_path(product_id: product.id, quantity: 1), class: 'btn btn-default add-to-carts', remote: true do %>
                          <i class="fa fa-shopping-cart">Добавить в корзину</i>
                      <% end %>
                  <% end %>
                </div>

              </div>
              <div class="choose">
                <ul class="nav nav-pills nav-justified">
                  <li><a href=""><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                  <li><a href=""><i class="fa fa-plus-square"></i>Add to compare</a></li>
                </ul>
              </div>
            </div>
          </div>
          <!------------------------------------------------------------------------>

          <div class="clearfix">
            <ul class="pagination">
              <li class="active"><a href="">1</a></li>
              <li><a href="">2</a></li>
              <li><a href="">3</a></li>
              <li><a href="">&raquo;</a></li>
            </ul>
          </div>

        </div><!--features_items-->
      </div>
    </div>
  </div>
</section>


