<h4><%= link_to 'Добавить новую категорию', new_admin_category_path %></h4>
<hr>
<h4>Все категории</h4>

<table class="table table-condensed">
  <tr>
    <td><b>Название</b></td>
    <td><b>Действия</b></td>
  </tr>
  <% @categories.each do |category| %>
      <tr>
      <td><%= category.title %></td>
        <td>
          <%= link_to 'Редактировать', edit_admin_category_path(category) %> /
          <%= link_to 'Удалить', admin_category_path(category), method: :delete, data: {confirm: 'Вы уверены?'} %>
        </td>
      </tr>
  <% end %>
</table>
