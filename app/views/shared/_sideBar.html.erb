<div class="left-sidebar">
  <h2>Category</h2>
  <div class="panel-group category-products" id="accordian"><!--category-productsr-->
    <% @categories.each_with_index do |category, index| %>
      <% if category.has_children? %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordian" href="#open_category_<%= index %>">
                <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                <%= category.title %>
              </a>
            </h4>
          </div>
          <div id="open_category_<%= index %>" class="panel-collapse collapse">
            <div class="panel-body">
              <ul>
                <% category.children.each do | subcategory| %>
                  <li><a href=""><%= subcategory.title %> </a></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <% elsif category.parent.present? %>
            <!-- Скрыть подкатегории -->
        <% else %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title"><a href="<%= category_path(category) %>"><%= category.title %></a></h4>
            </div>
          </div>
        <% end %>
      <% end %>


  </div><!--/category-products-->

  <div class="brands_products"><!--brands_products-->
    <h2>Brands</h2>
    <div class="brands-name">
      <ul class="nav nav-pills nav-stacked">
        <% @brands.each do |brand| %>
            <li><a href="<%= brand_path(brand) %>"> <span class="pull-right">(<%= brand.products_count.nil?  ? '0' : brand.products_count  %>)</span><%= brand.title %></a></li>
        <%end %>
      </ul>
    </div>
  </div><!--/brands_products-->

